@model IEnumerable<ArtistsHub.Models.DisciplineDto>
@{
    ViewBag.Title = "New";
}

<h2>Create a Art Form</h2>

<form action="/ArtForm/Create" method="POST">
    <div class="form-group">
        <label for="ArtFormName">Art Form Name</label>
        <input type="text" class="form-control" name="ArtFormName" />
    </div>
    <div class="form-group">
        <label for="DisciplineID">Discipline Name</label>
        <select name="DisciplineID" class="form-control">
            @foreach (var discipline in Model)
            {
                <option value="@discipline.DisciplineID">@discipline.DisciplineName</option>
            }
        </select>
    </div>
        <input type="submit" value="Add Art Form" class="btn btn-primary" />

</form>


