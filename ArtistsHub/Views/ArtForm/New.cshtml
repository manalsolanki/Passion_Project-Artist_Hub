@model IEnumerable<ArtistsHub.Models.DisciplineDto>
@{
    ViewBag.Title = "New";
}

<h2>Create a Art Form</h2>

<form action="/ArtForm/Create" method="POST">
    <div>
        <label>Art Form Name:</label> <input type="text" name="ArtFormName" />
    </div>
    <div>
        <label>Discipline Id:</label> 
        <select name="DisciplineID">
            @foreach(var discipline in Model)
            {
                <option value="@discipline.DisciplineID">@discipline.DisciplineName</option>
            }
        </select>
    </div>
  
    <div style="padding:1em;">
        <input type="submit" value="Add Art Form" />

    </div>
</form>


